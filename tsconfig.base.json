{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@teddy-city-hotels/shared-interfaces": ["libs/shared-interfaces/src/index.ts"],
      "@teddy-city-hotels/shared-interfaces/*": ["libs/shared-interfaces/src/*"],
      "@teddy-city-hotels/shared-services": ["libs/shared-services/src/index.ts"],
      "@teddy-city-hotels/shared-services/*": ["libs/shared-services/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
